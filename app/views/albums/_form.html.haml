= form_for @album, html: {class: 'w-full max-w-lg'} do |form|
    %div.flex.flex-wrap.-mx-3.mb-3
        %div.w-full.px-3.mb-2
            = form.label "Album Title", { class: 'block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2' }
            = form.text_field :name, { autocomplete: 'off', class: 'appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white'}
    %div.flex.flex-wrap.-mx-3.mb-3.border.border-indigo-200
        %div.w-full.px-3.mb-3
            = form.fields_for :crossfade, @album.crossfade.build do |crossfade|
                = crossfade.label :link, { class: 'block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2' }
                = crossfade.text_field :link, { autocomplete: 'off', class: 'appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white'}
    %div.flex.flex-wrap.-mx-3.mb-2.border.border-indigo-200
        %div.w-full.px-3.mb-3
            = form.fields_for :circle, @album.build_circle do |circle|
                = circle.label "Circle", { class: 'block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2' }
                = circle.text_field :name, { autocomplete: 'off', list:'circle_autocomplete', class: 'appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white'}
                %datalist#circle_autocomplete
                    - Circle.all.each do |circle|
                        %option{:value => circle.name}
    %div.flex.flex-wrap.-mx-3.mb-3.border.border-indigo-200
        %div.w-full.px-3.mb-3
            = form.fields_for :genres, @album.genres.build do | genre |
                = genre.label "Genre", { class: 'block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2' }
                = genre.text_field :name, { autocomplete: 'off', list:'genres_autocomplete',  class: 'appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white'}
                %datalist#genres_autocomplete
                    - Genre.all.each do |genre|
                        %option{:value => genre.name}
    %div.flex.flex-wrap.-mx-3
        %div.w-full.px-3.mb-6.border.border-indigo-200
            = form.fields_for :events, @album.events.build do | event |
                %div.w-full.mb-6
                    = event.label "Event Name", { class: 'block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2' }
                    = event.text_field :name, { autocomplete: 'off', list:'event_autocomplete', class: 'appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500' }
                    %datalist#genres_autocomplete
                        - Event.all.each do |genre|
                            %option{:value => genre.name}
                %div.w-full.mb-6
                    = event.label "Event Date", { class: 'block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2' }
                    = event.text_field :date, { autocomplete: 'off', class: 'appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500' }
                %div.w-full.mb-6
                    = event.label :location, { class: 'block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2' }
                    = event.text_field :location, { autocomplete: 'off', class: 'appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500' }
    %div.cursor-pointer
        = form.submit 'Create Entry',  class: "rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 cursor-pointer"